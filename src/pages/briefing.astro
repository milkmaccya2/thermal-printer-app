---
import Layout from '../layouts/Layout.astro'
import { getTodaysEvents } from '../utils/googleCalendar'
import { getMenuForDate } from '../data/menu-data'
import { Calendar, Clock, MapPin, Utensils } from 'lucide-react'

// Get events server-side
const events = await getTodaysEvents()
const now = new Date()
const todaysMenu = getMenuForDate(now)
const dateStr = now.toLocaleDateString('ja-JP', {
  month: 'long',
  day: 'numeric',
  weekday: 'short',
})

// We assume the weather image is available publicly at this path
// The user (via script) is responsible for updating this image before printing
// Use our dynamic API route to serve the image
// Appending a timestamp ensures clients (like Puppeteer) don't cache it
const weatherImageSrc = `/api/weather-image?t=${Date.now()}`
---

<Layout title="Morning Briefing">
  <!-- Container tuned for 58mm/80mm thermal printer width. 
         80mm printer safe width is ~576px. 
         We'll optimize for high contrast B&W. -->
  <div
    class="max-w-[576px] mx-auto bg-white min-h-screen p-4 font-sans text-black"
  >
    <!-- Header -->
    <header class="border-b-4 border-black pb-2 mb-6">
      <h1
        class="text-3xl font-black tracking-tighter uppercase flex items-center gap-2"
      >
        Good Morning
      </h1>
      <p class="text-lg font-bold mt-1 text-gray-700">{dateStr}</p>
    </header>

    <main class="space-y-8">
      <!-- Weather Section -->
      <section>
        <h2
          class="text-xl font-bold mb-3 border-b-2 border-gray-300 pb-1 flex items-center gap-2"
        >
          <span class="bg-black text-white px-2 py-0.5 text-sm rounded-sm"
            >WEATHER</span
          >
          Today's Forecast
        </h2>
        <div class="border-2 border-black rounded-lg overflow-hidden p-2">
          <img
            src={weatherImageSrc}
            alt="Weather Forecast"
            class="w-full h-auto grayscale contrast-125"
            style="image-rendering: pixelated;"
          />
          <p class="text-xs text-right mt-1 text-gray-500">
            Source: Yahoo! Weather
          </p>
        </div>
      </section>

      <!-- Calendar Section -->
      <section>
        <h2
          class="text-xl font-bold mb-3 border-b-2 border-gray-300 pb-1 flex items-center gap-2"
        >
          <span class="bg-black text-white px-2 py-0.5 text-sm rounded-sm"
            >SCHEDULE</span
          >
          Today's Events
        </h2>

        {
          events.length === 0 ? (
            <div class="border-2 border-dashed border-gray-300 p-6 text-center">
              <p class="text-gray-500 font-medium">No events scheduled today</p>
            </div>
          ) : (
            <div class="space-y-4">
              {events.map((event) => (
                <div class="border-l-4 border-black pl-3 py-1">
                  <div class="flex items-center gap-2 text-sm font-bold text-gray-600 mb-0.5">
                    <Clock class="w-4 h-4" />
                    {event.isAllDay ? (
                      <span>All Day</span>
                    ) : (
                      <span>
                        {event.startTime} - {event.endTime}
                      </span>
                    )}
                  </div>
                  <h3 class="text-lg font-black leading-tight mb-1">
                    {event.title}
                  </h3>
                  {event.location && (
                    <div class="flex items-start gap-1.5 text-sm text-gray-600 mt-1">
                      <MapPin class="w-4 h-4 mt-0.5 shrink-0" />
                      <span class="leading-tight">{event.location}</span>
                    </div>
                  )}
                </div>
              ))}
            </div>
          )
        }
      </section>

      <!-- Menu Section -->
      {
        todaysMenu && (
          <section>
            <h2 class="text-xl font-bold mb-3 border-b-2 border-gray-300 pb-1 flex items-center gap-2">
              <span class="bg-black text-white px-2 py-0.5 text-sm rounded-sm">
                MENU
              </span>
              Today's Lunch
            </h2>
            <div class="border-2 border-black rounded-lg p-3">
              <div class="flex items-start gap-2 mb-2">
                <Utensils class="w-5 h-5 mt-1 shrink-0" />
                <div>
                  <h3 class="font-black text-lg leading-tight">
                    {todaysMenu.lunch}
                  </h3>
                </div>
              </div>

              <div class="grid grid-cols-[auto_1fr] gap-x-4 gap-y-1 text-sm border-t border-gray-200 pt-2 mt-2">
                <span class="font-bold text-gray-600">Snack:</span>
                <span class="font-medium">{todaysMenu.snack}</span>

                <span class="font-bold text-gray-600">Energy:</span>
                <span class="font-medium">{todaysMenu.calories}</span>
              </div>
            </div>
          </section>
        )
      }

      <!-- Footer Area (Good for random quotes or reminders later) -->
      <footer class="pt-8 text-center text-xs text-gray-400 font-mono">
        Orbit-Skylab // {new Date().toLocaleTimeString('ja-JP')}
      </footer>
    </main>
  </div>
</Layout>
